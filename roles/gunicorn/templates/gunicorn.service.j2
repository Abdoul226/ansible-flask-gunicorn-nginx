[Unit]
Description=Gunicorn for {{ app_name }}
After=network.target

[Service]
User={{ app_user }}
Group={{ app_group }}
WorkingDirectory={{ app_dir }}/src
Environment="PATH={{ venv_dir }}/bin"
ExecStart={{ venv_dir }}/bin/gunicorn --workers {{ workers }} --threads {{ threads }} --worker-class {{ worker_class }} --bind 127.0.0.1:{{ listen_port }} wsgi:application
Restart=on-failure
RuntimeDirectory={{ app_name }}

[Install]
WantedBy=multi-user.target
